/** Stylus Styles */
@import './theme'

@import '../../node_modules/vuetify/src/stylus/app'

.pagecaption {
	font-family: 'Taviraj', serif;
	font-weight:600;
	font-style: italic;
	padding: 0px;
	margin: 0px;
}

.layer {
		background-color: rgba(0, 50, 99, 0.5);
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
}

.projectcard {
  background-color: rgba(0, 50, 99, 0.8)!important;
  border-left: 20px solid rgb(0,50,99)!important;
  height:100%!important;
	overflow: hidden;
}

.separator {
	border-top: 1px dotted;
	height: 0px;
}

a {
  text-decoration: none!important;
}

body {
  font-family: 'Montserrat';
}

h6 {
	font-size: 14px;
	font-weight: 700;
	line-height: 1.4;
}
